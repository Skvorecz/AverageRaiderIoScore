<Window x:Class="AverageRaiderIoScore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AverageRaiderIoScore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:StringToEnumConverter x:Key="StringToEnumConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" Grid.ColumnSpan="2" ItemsSource="{Binding Path=Characters}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox ItemsSource="{StaticResource ResourceKey=regions}" SelectedItem="{Binding Path=Region, Converter={StaticResource StringToEnumConverter}}"/>
                        <TextBox MinWidth="100" Text="{Binding Path=Realm}"/>
                        <TextBox MinWidth="100" Text="{Binding Path=Name}"/>
                        <TextBox MinWidth="50" IsReadOnly="True" Text="{Binding Path=RaiderIoScore, Mode=OneWay}"/>
                        <TextBox MinWidth="50" IsReadOnly="True" Text="{Binding Path=ItemLvl, Mode=OneWay}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <Button Grid.ColumnSpan="2" Grid.Row="1" Content="+" Command="{Binding Path=AddCharacterCommand}"/>
        <Button Grid.ColumnSpan="2" Grid.Row="2" Content="Load" Command="{Binding Path=ExecuteCommand}"/>
        
        <TextBox Grid.Row="3" Grid.Column="0" IsReadOnly="True" Text="{Binding Path=AverageRaiderIoScore, Mode=OneWay}"/>
        <TextBox Grid.Row="3" Grid.Column="1" IsReadOnly="True" Text="{Binding Path=AverageItemLvl, Mode=OneWay}"/>

        <TextBlock Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" Text="{Binding Path=LogText, Mode=OneWay}" TextWrapping="Wrap"/>
    </Grid>
</Window>
