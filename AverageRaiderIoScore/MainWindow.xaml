<Window x:Class="AverageRaiderIoScore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AverageRaiderIoScore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:StringToEnumConverter x:Key="StringToEnumConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" ItemsSource="{Binding Path=Characters}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox ItemsSource="{StaticResource ResourceKey=regions}" SelectedItem="{Binding Path=Region, Converter={StaticResource StringToEnumConverter}}"/>
                        <TextBox MinWidth="100" Text="{Binding Path=Realm}"/>
                        <TextBox MinWidth="100" Text="{Binding Path=Name}"/>
                        <TextBox MinWidth="50" IsReadOnly="True" Text="{Binding Path=RaiderIoScore, Mode=OneWay}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Grid.Row="1" Content="+" Command="{Binding Path=AddCharacterCommand}"/>
        <Button Grid.Row="2" Content="Load" Command="{Binding Path=ExecuteCommand}"/>
        <TextBlock Grid.Row="3" Text="{Binding Path=AverageRaiderIoScore}"/>
    </Grid>
</Window>
